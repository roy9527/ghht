<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ghtt.fortao"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="com.ghtt.activity.MainCardActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.stock.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.stock.ListViewActivity"
            android:label="@string/activity_listview"
            android:theme="@android:style/Theme.Holo.Light" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.stock.ScrollViewActivity"
            android:label="@string/activity_scrollview"
            android:theme="@style/Theme.Holo.CustomPtrHeader" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.stock.GridViewActivity"
            android:label="@string/activity_gridview"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.stock.WebViewActivity"
            android:label="@string/activity_webview" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.stock.FragmentTabsActivity"
            android:label="@string/activity_fragment_tabs"
            android:theme="@style/Theme.Holo.CustomSmoothProgressBar" />
